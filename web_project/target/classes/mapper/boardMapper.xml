<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

<!-- 삽입(게시글 작성) -->
<insert id="insert">
	insert into tbl_board(title, content, writer) values(#{title}, #{content}, #{writer})
</insert>

<!-- 조회(상세조회) -->
<select id="view" resultType="com.example.project.vo.BoardVO">
	select * from tbl_board where bno=#{bno}
</select>

<!-- 전체목록 -->
<!-- <select id="listAll" resultType="com.example.project.vo.BoardVO">
 select * from tbl_board where bno > 0 order by bno desc, regdate desc
</select>-->

<select id="listAll" resultType="com.example.project.vo.BoardVO">
	select bno, title, content, writer, regdate, viewcnt from tbl_board 
	<include refid="search" /> 
	order by bno desc, regdate desc
</select>
<!-- 검색 조건 sql -->
<sql id="search">
    <choose>
        <!-- 검색옵션이 전체 검색일 경우 -->
        <when test="searchOption.equals('all')">
            WHERE writer like concat('%',#{keyword},'%')            
            OR content like concat('%',#{keyword},'%')
            OR title like concat('%',#{keyword},'%')
        </when>
        <!-- 전체 검색이 아닐 경우 -->
        <otherwise>
            WHERE ${searchOption} like concat('%',#{keyword},'%')
        </otherwise>
    </choose>
</sql>

<select id="countArticle" resultType="int">
	select count(*) from tbl_board
	<include refid="search" />
</select>


<!-- 수정 -->
<update id="updateArticle">
	 update tbl_board set title=#{title}, content=#{content}, writer=#{writer}
	 where bno=#{bno}
</update>

<!-- 삭제 -->
<delete id="deleteArticle">
	delete from tbl_board where bno=#{bno}
</delete>


<!-- 조회수 증가 -->
<update id="increaseViewcnt">
 update tbl_board set viewcnt = viewcnt+1 where bno=#{bno}
</update>

</mapper>